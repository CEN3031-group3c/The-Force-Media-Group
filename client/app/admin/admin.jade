  h3
    | Default Color Theme
  .col-xs-12
    div.color1Default.col-xs-5.colorPanel
    div.col-xs-7
  .col-xs-12
    div.color2Default.col-xs-5.colorPanel
    div.col-xs-7
  .col-xs-12
    div.color3Default.col-xs-5.colorPanel
    div.col-xs-7
