.container
  h3
    | Custom Color Theme
  .col-xs-12
    div.col-xs-5.colorPanel(ng-style="{'background-color': themeColors[0].colorCode}")
    div.col-xs-7
  .col-xs-12
    div.col-xs-5.colorPanel(ng-style="{'background-color': themeColors[1].colorCode}")
    div.col-xs-7
  .col-xs-12
    div.col-xs-5.colorPanel(ng-style="{'background-color': themeColors[2].colorCode}")
    div.col-xs-7
  .col-xs-12
    div.col-xs-5.colorPanel(ng-style="{'background-color': themeColors[3].colorCode}")
    div.col-xs-7
  .col-xs-12
    div.col-xs-5.colorPanel(ng-style="{'background-color': themeColors[4].colorCode}")
    div.col-xs-7

.container
  form
    br
    | Color 1:
    input.textBoxPadding(type="text", placeholder="#094d74", ng-model="customColors[0].colorCode")
    br
    | Color 2:
    input.textBoxPadding(type="text", placeholder="#759cd8", ng-model="customColors[1].colorCode")
    br
    | Color 3:
    input.textBoxPadding(type="text", placeholder="#9cb9d1", ng-model="customColors[2].colorCode")
    br
    | Color 4:
    input.textBoxPadding(type="text", placeholder="#cfdaec", ng-model="customColors[3].colorCode")
    br
    | Color 5:
    input.textBoxPadding(type="text", placeholder="#eef0f6", ng-model="customColors[4].colorCode")
    br

    a.btn.btn-xs.btn-default.textBoxPadding(ng-click="saveCustomColorTheme()")
      | Save
    br
    br

footer

  modal-dialog(show="dialogVisible" dialog-title="Send text message to users" height="250px" width="30%")
    textarea(placeholder="Hey everyone! Check out the new video." ng-model="textBody" style="margin-top:20px;height:100px;").form-control

    div(style="margin-top:10px")
      button.btn.btn-xs.btn-default(ng-click="hideDialog()")
        | Cancel
      button.btn.btn-xs.btn-success#removeItemButton(ng-click="sendText(textBody)")
        | Send Text
